<div class="list-group panel panel-default">
    <div class="panel-heading">
        <div class="row">
            <div class="col-md-3">
                <div class="row">
                    <div class="col-md-5">
                        <div class="h3" style="margin-top: 10px">{{date}}</div>
                    </div>
                    <div class="col-md-4" style="margin: 4px 0px; padding: 0px ">
                        <div class="small">{{month}}</div>
                        <div>{{year}}</div>
                    </div>
                </div>

            </div>
            <div class="col-md-4 col-md-offset-5 text-right"> Total: ${{total}}</div>
        </div>
    </div>
    {{#each bills}}
    <a href="#" class="list-group-item">
        <div class="row">
            <div class="col-sm-11">
                <div class="panel-body">
                    <div class="row">
                        <div class="col-sm-8">
                            <strong>{{category}}</strong>
                            <div>{{note}}</div>
                        </div>
                        <div class="col-sm-2">
                            $ {{amount}}
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-1">
                <span class="glyphicon glyphicon-remove" data-toggle="modal" data-href="{{_id}}" data-target="#confirm-delete" aria-label="remove expense"></span>
                {{!--<a href="#delete" class="col-sm-1" data-toggle="modal" data-href="{{_id}}" data-target="#confirm-delete" aria-label="Delete this expense"></a>--}}
            </div>
        </div>
    </a>
    {{/each}}
</div>
