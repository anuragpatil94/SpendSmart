<div class="list-group panel panel-default">
    <div class="panel-heading">
        <div class="row">
            <div class="col-md-3">
                <div class="row">
                    <div class="col-md-5">
                        <h3 style="margin-top: 10px">{{date}}</h3>
                    </div>
                    <div class="col-md-4" style="margin: 4px 0px; padding: 0px ">
                        <div class="small">{{month}}</div>
                        <div>{{year}}</div>
                    </div>
                </div>

            </div>

        </div>
    </div>
    {{#each bills}}
    <a href="#" class="list-group-item">
        <div class="row">
            <div class="col-sm-11">
                <div class="panel-body">
                    <div class="row">
                        <div class="col-sm-8">
                            <strong>{{category}}</strong>
                            <div>{{note}}</div>
                        </div>
                        <div class="col-sm-2">
                            $ {{amount}}
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-1">
                <span class="glyphicon glyphicon-pencil hidden" aria-hidden="true">
            </span>
            </div>
        </div>
    </a>
    {{/each}}
</div>